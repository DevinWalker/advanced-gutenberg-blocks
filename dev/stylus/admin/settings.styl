.toplevel_page_gutenberg-blocks
	background background-color

	#wpcontent
		padding-left 0

	*
		box-sizing border-box


.gutenblocks-settings__header
	background white
	border-bottom 1px solid border-color
	padding 10px

.gutenblocks-settings__header__inner
	max-width 50rem
	margin 0 auto
	padding 0 1.5rem
	display flex

	h1
		font-weight 500
		margin 0
		line-height 32px
		font-size 1.4em

	img
		display block
		width 32px
		height 32px
		margin-right 6px

.gutenblocks-settings__content
	max-width 50rem
	margin 0 auto
	padding 1.5rem

.gutenblocks-list
	background white
	border 1px solid border-color
	margin-bottom 3rem

.gutenblocks-list__item
	padding pad-s

	&:not(:last-child)
		border-bottom 1px solid border-color
