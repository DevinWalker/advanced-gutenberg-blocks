html
	box-sizing border-box

*, *:before, *:after
	box-sizing inherit 

body
	background background-color

	#wpcontent
		background background-color
		padding-left 0

	img
		max-width 100%

.AGB-search
	margin 10px auto 0
	max-width 50rem
	padding 0

	input
		width 100%
		padding .5rem 1rem

.AGB-settings
	padding-top 53px

.AGB-settings__header
	background white
	border-bottom 1px solid border-color
	padding 10px
	position fixed
	top 32px
	left 160px
	right 0
	z-index 100

.AGB-settings__header__inner
	max-width 50rem
	margin 0 auto
	padding 0 1.5rem
	display flex

	h1
		font-weight 500
		margin 0
		line-height 32px
		font-size 1.4em

	img
		display block
		width 32px
		height 32px
		margin-right 6px

.AGB-settings__header__menu
	display flex
	justify-content flex-end
	margin 0
	flex 1

	li
		margin-bottom 0

	a
		display block
		line-height 32px
		text-decoration none
		padding 0 10px

	li + li
		border-left 1px solid border-color

.AGB-settings__content
	max-width 50rem
	margin 0 auto
	padding 1.5rem

	h2
		margin-bottom 0.4em

.AGB-settings__description
	font-size 13px
	font-style italic
	color contrast-text-color
	margin-top 0

.AGB-list
	background white
	border 1px solid border-color
	margin pad-s 0 3rem

	dl
		margin 0

.AGB-list__title
	font-weight 400
	color contrast-text-color
	font-size 1.2em
	letter-spacing .02em
	padding pad-s
	margin 0
	border-bottom 1px solid border-color
	background #fbfbfb

	&:before
		content 'â€” '
		color border-color

.AGB-block
	margin 0
	border-bottom 1px solid border-color

	&:before
		content ""
		display block
		height 85px /* fixed header height*/
		margin -85px 0 0 /* negative fixed header height */

.AGB-block__head
	display flex
	align-items center
	padding 16px pad-s

.AGB-block__icon
	position relative
	padding-right 8px
	cursor pointer

	&:after
		content ''
		display block
		position absolute
		top -3px
		left -3px
		width 8px
		height 8px
		border-radius 50%
		transition .4s background ease-out

.AGB-block.is-active
	.AGB-block__icon:after
		background #8cc44b

.AGB-block:not(.is-active)
	.AGB-block__title
	.AGB-block__icon span
		opacity .5

	.AGB-block__icon:after
		background #B54D4D

.AGB-block__title
	flex 1
	font-weight bold
	cursor pointer

	small
		opacity .5

.AGB-block__actions
	text-align right

.AGB-block__button
	font-size .9em
	display inline-block
	border 1px solid border-color
	border-radius 5px
	color #8D9FB0
	text-decoration none
	padding 5px 7px
	transition .3s all ease-out

	&:hover
		border-color #454545
		color #454545

	&:focus
		box-shadow none

.AGB-block__button + .AGB-block__button
	margin-left 8px

.AGB-block__panel
	display none
	padding 0 20px

.AGB-block__panel__title
	position relative
	font-weight bold
	margin 2em 0 1em

	&:before
		content ''
		display block
		position absolute
		height 1px
		width 80px
		background border-color
		top -8px
		left 0


.AGB-block__description
	margin 1.5em 0

	p:last-child
		margin 0
		color contrast-text-color
		font-style italic

.AGB-block__preview
	img
		display block
		margin 0 auto
		max-width 400px

// .AGB-block__settings

.AGB-block__settings__description
	font-style italic
	color contrast-text-color

.AGB-block__settings__option
	display flex
	margin 1em 0

.AGB-block__settings__label
	width 120px

.AGB-block__settings__field
	flex 1

	textarea
	input[type=text]
	input[type=url]
	input[type=password]
	input[type=email]
		width 100%
		max-width 400px
